<%= stylesheet_link_tag 'parallax/styles' %>

<div class="hero-unit pagination-centered" style="padding:45px">
  <h1>Octo meets Pussy</h1>

  <h2>Octo and Pussy are soulmates.<br>Together they help you manage your projects using Github.</h2>
  <!-- REQUIRED FOR PARALLAX -->
  <div id="parallax" class="clear">
    <div class="parallax-layer" style="width:1200px; height:300px;">
      <img src="<%= image_path 'parallax/twinkle.png' %>" alt="" style="width:1200px; height:300px;"/>
    </div>
    <div class="parallax-layer" style="width:1200px; height:300px;">
      <img src="<%= image_path 'parallax/sea.png' %>" alt="" style="width:1200px; height:300px;"/>
    </div>
    <div class="parallax-layer" style="width:1200px; height:250px;">
      <img src="<%= image_path 'parallax/sand.png' %>" alt="" style="width:1200px; height:250px;"/>
    </div>
    <div class="parallax-layer" style="width:500px; height:250px;">
      <img src="<%= image_path 'parallax/octo_pussy.png' %>" alt="" style="width:500px; height:250px;"/>
    </div>
  </div>
  <!-- /REQUIRED FOR PARALLAX -->
</div>

<div class="row pagination-centered">
  <h1>Visualize in a glance</h1>

  <div class="span4">
    <h2>Projects</h2>

    <%= image_tag 'projects-preview.png' %>
  </div>
  <div class="span4">
    <h2>Milestones</h2>

    <%= image_tag 'milestones-preview.png' %>
  </div>
  <div class="span4">
    <h2>Tasks</h2>

    <%= image_tag 'tasks-preview.png' %>
  </div>
</div>

<script type="text/javascript" language="JavaScript" src="/libs/jquery.event.frame.js"></script>
<script type="text/javascript" language="JavaScript" src="/libs/jquery.jparallax.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#parallax .parallax-layer')
                .parallax({
                    mouseport:$('#parallax'),
                    xparallax:0.1
                });
    });
</script>
