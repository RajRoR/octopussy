<div class="row" id='projects'>
	<ul class="thumbnails project-thumbnails" id='fav'>
		<h1>Favorite Projects</h1>
		<hr />
		<div class='center', id='wait'>
			<div>Please wait... We are fetching your projects</div><br />
			<%= image_tag 'spinner.gif', :alt => 'please wait' %>
		</div>
	</ul>
	<ul class="thumbnails project-thumbnails" id='unfav'>
		<h1>Other Projects</h1>
		<hr />
		<div class='center', id='wait'>
			<div>Please wait... We are fetching your projects</div><br />
			<%= image_tag 'spinner.gif', :alt => 'please wait' %>
		</div>
		<%#= "<h4 style='text-align:center'>Wallah! All projects are your favorite.</h4>".html_safe if Favourite.find.all(:conditions => ['project_id NOT IN ?', @projects.collect { |p| p.id }]) %>
	</ul>
</div>
